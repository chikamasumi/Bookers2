<% if flash[:notice] %>
  <p id="notice">
    <%= flash[:notice] %>
  </p>
<% end %>

<p id="notice"></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/list', book: @newbook, user: @user %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table>
        <thead>
          <th width="145.38" heigth="24" colspan="1"></th>
          <th width="192" heigth="24">Title</th>
          <th width="400" heigth="24">Opinion</th>
          <th width="145.38" heigth="24" colspan="2"></th>
        </thead>
        <tbody>

          <tr>
            <td>
              <%= link_to user_path(@book.user) do %>
                <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback:"no_image.jpg", format: 'jpeg' %>
                <%= @user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@book) do %>
                <%= @book.title %>
              <% end %>
            </td>
            <td><%= @book.body %></td>
            <% if @user == current_user %>
              <td><%= link_to 'Edit', edit_book_path(@book.id), class:'btn btn-sm btn-success' %></td>
              <td><%= link_to 'Destroy', book_path(@book.id), class:'btn btn-sm btn-danger', method: :delete, "data-confirm" => "Are you sure?" %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>