<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <div><%= attachment_image_tag user, :image, :fill, 60, 60, fallback:"no_image.jpg", format: 'jpeg' %></div>
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= user.name %></th>
          </tr>
          <tr>
            <th></th>
            <th>introduction</th>
            <th><%= user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <%= link_to "編集", edit_user_path(user.id), class:'btn btn-outline-secondary btn-block' %>
      </div>
      <h2>New book</h2>
      <% if book.errors.any? %>
        can't be blank error
      <% end %>
      <%= form_with model: book, local:true do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>
        <h4>Opinion</h4>
        <%= f.text_area :body %>
        <%= f.submit 'Create Book',class:'btn btn-primary' %>
      <% end %>